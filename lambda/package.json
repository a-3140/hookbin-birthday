{
  "name": "birthday-lambda",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --mode production",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "package": "cd dist && zip -r function.zip .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.7",
    "eslint": "^9.37.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/../shared/$1"
    }
  }
}
